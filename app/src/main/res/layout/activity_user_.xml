<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ducthinh.foody1.android.a14110191_luuducthinh_foody1.View.User_Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100">
        <LinearLayout
            android:layout_weight="46.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tài khoản"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout

            android:background="#000"
            android:layout_weight="45.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lllogin">
                <ImageView
                    android:background="@drawable/ic_thongtin"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lưu Đức Thịnh"
                    android:textColor="#FFF"/>
                <Button
                    android:background="#000"
                    android:text="Xem hoạt động"
                    android:textColor="#FFF"
                    android:textSize="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/llnologin"
                android:weightSum="10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_nologin"/>
                <TextView
                    android:layout_weight="8"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="24dp"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Đăng nhập"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_right_login"
                    android:layout_gravity="end|center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listViewUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
