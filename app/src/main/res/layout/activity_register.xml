<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:background="@drawable/blur"
    tools:context="ducthinh.foody1.android.a14110191_luuducthinh_foody1.View.Register">

    <ImageView
        android:id="@+id/imageViewRegister"
        android:layout_width="27dp"
        android:layout_height="26dp"
        app:srcCompat="@drawable/ic_arrow_back_white"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="29dp"
        android:text="Đăng kí"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/imageViewRegister"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:id="@+id/editemailreg"
        android:layout_width="310dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Email"
        android:textColorHint="#FFF"
        android:backgroundTint="#FFFFFF"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.494"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:textSize="21dp"
        android:id="@+id/editpassreg"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Mật khẩu"
        android:textColorHint="#FFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editemailreg"
        app:layout_constraintHorizontal_bias="0.494"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:textSize="21dp"
        android:id="@+id/editpass2reg"
        android:layout_width="310dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Nhập lại mật khẩu"
        android:textColorHint="#FFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editpassreg"
        app:layout_constraintHorizontal_bias="0.494"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:hint="Tên hiển thị"
        android:textColorHint="#FFF"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:textSize="21dp"
        android:id="@+id/editdisnamereg"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editpass2reg"
        app:layout_constraintHorizontal_bias="0.494"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/buttonreg"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:text="Đăng kí"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/editdisnamereg"
        app:layout_constraintHorizontal_bias="0.493"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu phải có ít nhất 4 kí tự"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonreg" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnloginfromreg"
        android:layout_width="396dp"
        android:layout_height="51dp"
        android:text="Đăng nhập"
        android:textSize="18dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.942"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <FrameLayout
        android:id="@+id/frameregister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ProgressBar
            android:id="@+id/progress_barregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_list_items"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible" />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
